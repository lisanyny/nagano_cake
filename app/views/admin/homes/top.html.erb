 <main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11">
       <h5 class="genres-index">注文履歴一覧</h5>

       <table class="table table-hover table-inverse">
         <thead>
           <tr>
             <th>購入日時</th>
             <th>購入者</th>
             <th>注文個数</th>
             <th>注文ステータス</th>
           </tr>
         </thead>
         <tbody>
          <% @orders.each do |order| %>
           <tr>
             <td>
              <%= order.created_at.strftime('%Y/%m/%d') %>
             </td>
             <td>
                <%= order.customer.last_name+order.customer.first_name %>
             </td>
             <td>
              <%= order.id %>
             </td>
             <td>
              <%= order.status %>
             </td>
           </tr>
           <% end %>
         </tbody>
       </table>
      </div>
    </div>
  </div>
 </main>