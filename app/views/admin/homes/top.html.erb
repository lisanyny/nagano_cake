<div class="container">
  <div style="margin:10px;">
    <span style="background:#DDDDDD">注文履歴一覧</span>
  </div>
  <div class="row">
    <div class="mx-auto col-11">
      <table class="table table-hover table-inverse">
        <thead>
           <tr>
             <th>購入日時</th>
             <th>購入者</th>
             <th>注文個数</th>
             <th>注文ステータス</th>
           </tr>
         </thead>
         <tbody>
          <% @orders.each do |order| %>
           <tr>
             <td>
              <%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %>
             </td>
             <td>
                <%= order.customer.last_name+order.customer.first_name %>
             </td>
             <td>
              <%= order.id %>
             </td>
             <td>
              <%= order.status_i18n %>
             </td>
           </tr>
           <% end %>
         </tbody>
       </table>
       <%= paginate @orders %>
     </div>
   </div>
</div>