<div class="container">
  <div style="margin:20px;">
    <span style="background:#DDDDDD">注文履歴詳細</span></br>
  </div>
  <div class="row">
    <div class="col-12">
    <table>
      <tr>
        <th>購入者</th>
        <td><%= @order.customer.last_name+@order.customer.first_name %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          〒<%= @order.postal_code %>　<%= @order.address %></br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <%= form_with model: @order, url: admin_order_path do |f| %>
        <td><%= @order.status_i18n %></td>
        <td><%= f.submit "更新", class: 'btn btn-success' %></td>
        <% end %>
      </tr>
    </table>
    </div>
    <div class="col-8" style="margin:20px 0">
      <table class="table table-hover table-inverse">
        <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
          <th></th>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.price*order_detail.amount %></td>
          <%= form_with model: order_detail, url: admin_order_path do |f| %>
          <td><%= order_detail.making_status_i18n %></td>
          <td><%= f.submit "更新", class: 'btn btn-success' %></td>
          <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-4" style="margin:20px 0">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @order.price %></td>
        </tr>
         <tr>
          <th>送料</th>
          <td><%= @order.postage %></td>
        </tr>
         <tr>
          <th>請求金額合計</th>
          <td><%= @order.price+@order.postage %></td>
        </tr>
      </table>
    </div>
  </div>
</div>