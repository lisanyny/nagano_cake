<body>
  <main>
    <div class="container">
      <div class="row">
        <div class="mx-auto col-11">
          <h5 class="genres-index">ジャンル一覧・追加</h5>
          <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
          <h6>ジャンル名</h6>
          <%= f.text_field :name %>
          <%= f.submit '新規登録', class: 'btn btn-success' %>
          <% end %>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>ジャンル</th>
                <th></th>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
              <tr>
                <td>
                  <%= genre.name %>
                </td>
                <td>
                  <%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>