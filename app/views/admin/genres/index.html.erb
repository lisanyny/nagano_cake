<div class="container">
  <div style="margin:20px;">
    <span style="background:#DDDDDD">ジャンル一覧・追加</span></br>
  </div>
    <div class="row">
      <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
        <div class="col-12">
          <table>
            <th>ジャンル名　</th>
            <td><%= f.text_field :name %>　</td>
            <td><%= f.submit '新規登録', class: 'btn btn-success' %>　</td>
          </table>
        </div>
      <% end %>
　　<div class="col-6" style="margin:20px;">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>