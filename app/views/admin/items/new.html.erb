<div class="container">
  <span style="background:#DDDDDD">商品新規登録</span></br>
    <%= form_with model: @item, url: admin_items_path do |f| %>
      <div class="row">
        <div class="col-10">
        <table>
          <tr>
            <th>商品画像</th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
          </tr>
          <tr>
            <th>税抜価格</th>
            <td><%= f.text_field :price %>円</td>
          </tr>
        </table>
        </div>

        <div class="col-10">
        <table>
          <tr>
            <th>販売ステータス</th>
            <div class="item-radio_button">
              <td>
                <div>
                  <%= f.radio_button :is_active, true %>
                  <%= f.label :is_active, '販売中', value: true %>
                </div>
              </td>
              <td>
                <div>
                  <%= f.radio_button :is_active, false %>
                  <%= f.label :is_active, '販売停止中', value: false %>
                </div>
              </td>
            </div>
          </tr>
        </table>
        </div>
        <div class="col-10" style="text-align:center;">
            <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
    <% end %>
  </div>
</div>