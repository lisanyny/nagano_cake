<div class="container">
  <span style="background:#DDDDDD">商品詳細</span></br>
    <div class="row">
      <div style="margin:20px;">
        <%= image_tag @item.image, size: "width:200, height:auto" %>
      </div>

        <table style="margin:20px;">
          <thead>
            <th></th>
            <th></th>
          </thead>
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @genre.name %></td>
            </tr>
            <tr>
              <td>税込価格</br>(税抜価格)</td>
              <td>
                <%= @item.with_tax_price %>
                (<%= @item.price %>)円
              </td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <% if @item.is_active == true %>
                  <strong>販売中</strong>
                <% else %>
                  <strong>販売停止中</strong>
                <% end %>
              </td>
            </tr>

          </tbody>
        </table>

      <div class="col-10" style="text-align:center;">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success' %>
      </div>
    </div>
  </div>