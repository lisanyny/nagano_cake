<div class="container">
  <span style="background:#DDDDDD">商品詳細</span></br>
    <div class="row">
      <%= image_tag @item.image, size: "300x200" %>

        <table>
          <thead>
            <th></th>
            <th></th>
          </thead>
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @genre.name %></td>
            </tr>
            <tr>
              <td>税込価格</br>(税抜価格)</td>
              <td>
                <%= @item.add_tax_price.to_s(:delimited) %> 円
                (<%= @item.price %>円)
              </td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <% if @item.is_active == true %>
                  <%= "販売中" %>
                <% else %>
                  <%= "販売停止中" %>
                <% end %>
              </td>
            </tr>

          </tbody>
        </table>
      </div>
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success' %>
  </div>