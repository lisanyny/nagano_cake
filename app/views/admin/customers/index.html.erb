<div class="container">
  <div class="row">
    <div style="margin:20px;">
      <span style="background:#DDDDDD">会員一覧</span>
    </div>
      <div class="mx-auto col-11">
        <table class="table table-hover table-inverse" style="margin:10px;">
          <thead>
              <tr>
                <th class="table-title">会員ID</th>
                <th class="table-title">氏名</th>
                <th class="table-title">メールアドレス</th>
                <th class="table-title">ステータス</th>
              </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td>
                  <%= customer.id %>
                </td>
                <td>
                  <%= link_to admin_customer_path(customer.id) do %>
                    <%= customer.last_name+customer.first_name %>
                  <% end %>
                </td>
                <td>
                  <%= customer.email %>
                </td>
                <td>
                  <% if customer.is_deleted == true %>
                    <strong class="status-false">退会</strong>
                  <% else %>
                    <strong>有効</strong>
                  <% end %>
                </td>
              </tr>
            <% end %>
        </tbody>
        </table>
        <%= paginate @customers %>
      </div>
    </div>
 </div>
