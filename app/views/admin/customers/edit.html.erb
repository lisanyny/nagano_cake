<div class="container">
  <span style="background:#DDDDDD"><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</span>
    <div class="row">
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>

    <table>
      <thead>
        <th></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
          <td></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
          <td></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <div>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_deleted, '有効', value: false %>
            </div>
            <div>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, '退会', value: true %>
            </div>
          </td>
          <td></td>
        </tr>
      </tbody>
    </table>
    <%= f.submit "変更を保存", class: 'btn btn-success' %>
      <% end %>

    </div>
</div>