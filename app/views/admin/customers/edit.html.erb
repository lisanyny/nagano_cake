<body>
  <main>
    <div class="container">
      <div class="row">
        <div class="mx-auto col-11">
          <h5 class="genres-index"><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</h5>
          <%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>
          <ul style="list-style: none;" >
            <li class="item-label">会員ID
              <%= @customer.id %>
            </li>

            <li class="item-label">氏名
              <%= f.text_field :last_name %> <%= f.text_field :first_name %>
            </li>

            <li class="item-label">フリガナ
              <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
            </li>

            <li class="item-label">郵便番号
              <%= f.text_field :postal_code %>
            </li>

            <li class="item-label">住所
              <%= f.text_field :address %>
            </li>

            <li class="item-label">電話番号
              <%= f.text_field :telephone_number %>
            </li>

            <li class="item-label">メールアドレス
              <%= f.text_field :email %>
            </li>

            <li class="item-label">会員ステータス
              <div>
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_deleted, '有効', value: false %>
              </div>
              <div>
                <%= f.radio_button :is_deleted, true %>
                <%= f.label :is_deleted, '退会', value: true %>
              </div>
            </li>

            <%= f.submit "変更を保存", class: 'btn btn-success' %>

          </ul>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</body>