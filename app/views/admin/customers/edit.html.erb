<div class="container">
  <span style="background:#DDDDDD"><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</span>
    <div class="row">
      <div class="col-12" style="margin:20px;">
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>
      <table>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
          <td></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
          <td></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <div class="radio_inline">
              <div>
                <%= f.radio_button :is_deleted, false, checked: true%>
                <%= f.label :is_deleted, '有効'%>
              </div>
              <div>
                <%= f.radio_button :is_deleted, true %>
                <%= f.label :is_deleted, '退会' %>
              </div>
            </div>
          </td>
          <td></td>
        </tr>
      </table>
    </div>
    <div class="col-6" style="text-align:center;">
    <%= f.submit "　変更を保存　", class: 'btn btn-success' %>
    </div>
      <% end %>
  </div>
</div>