<div class="container">
  <div style="margin:20px;">
  <span style="background:#DDDDDD">注文履歴詳細</span>
  </div>
  <div class="row">
    <div class="col-8">
      <strong>注文情報</strong>
      <table class="table table-hover table-inverse">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d')  %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒
           <%= @order.postal_code %>
           <%= @order.address %>
           <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-4">
      <strong>請求情報</strong>
      <table class="table table-hover table-inverse">
        <tr>
          <th>商品合計</th>
          <td><%= @order.price %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.price+@order.postage %></td>
        </tr>
      </table>
    </div>
    <div class="col-10">
      <strong>注文内容</strong>
      <table class="table table-hover table-inverse">
        <thead>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
         <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.price*order_detail.amount %></td>
         </tr>
         <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>