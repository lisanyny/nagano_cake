<div class="container">
  <span style="background:#DDDDDD">会員情報編集</span></br>
    <div class="row">
      <%= form_with model: @customer, url: update_information_path do |f| %>
      <table>
        <thead>
          <th></th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
            <td></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
            <td></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number %></td>
            <td></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
            <td></td>
          </tr>
        </tbody>
      </table>
      <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
      <%= link_to "退会する", confirm_path, class: 'btn btn-danger' %>
      <% end %>

    </div>
</div>