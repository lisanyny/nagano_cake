<div class="container">

  <span style="background:#DDDDDD">マイページ</span></br>

    <div class="row">
      <div class="col-4" style="margin:20px;">
      <table>
        <tr>
          <th><h5><strong>登録情報　</strong></h5></th>
          <td><%= link_to "編集する", edit_information_path, class: 'btn btn-success' %></td>
        </tr>
      </table>
      </div>
      <div class="col-9">
      <table class="table table-bordered">
        <tr>
          <th>氏名<</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
         <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      </div>
      <div class="col-4">
      <table>
        <tr>
          <th><h5><strong>配送先　</strong></h5></th>
          <td><%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary' %></td>
        </tr>
        <tr>
          <th><h5><strong>注文履歴　</strong></h5></th>
          <td><%= link_to "一覧を見る", orders_path, class: 'btn btn-primary' %></td>
        </tr>
      </table>
      </div>
    </div>
</div>