<div class="container">
<div class="text-center">
    <%= image_tag 'public_top', width: 'auto', height: '200px' %>
</div>

<h2><strong>新着商品</strong></h2>
<div class="row">
  <% @items.each do |item| %>
  <div class="col-3">
    <%= image_tag item.image, width: 'auto', height: '150px' %></br>
    <%= item.name %></br>
    ¥<%= item.price.to_s(:delimited) %></br>
  </div>
  <% end %>
</div>

<div class="text-right">
  <%= link_to "全ての商品を見る >", items_path %>
</div>
</div>