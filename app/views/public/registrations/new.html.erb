<div class="container">
  <span style="background:#DDDDDD">新規会員登録</span></br>
  <div class="row">

    <%= render "public/shared/error_messages", resource: resource %>
    <%= form_with model: @customer, url: customer_registration_path do |f| %>

  <table>
    <thead>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    <tdoby>
      <tr>
        <td>名前　　　　　　(姓)</td>
        <td><%= f.text_field :last_name %><%= f.label "(名)" %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td>フリガナ　　　　(セイ)</td>
        <td><%= f.text_field :last_name_kana %><%= f.label "(メイ)" %></td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        <td></td>
      </tr>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postal_code %></td>
        <td></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
        <td></td>
      </tr>
      <tr>
        <td>電話番号(ハイフンなし)</td>
        <td><%= f.text_field :telephone_number %></td>
        <td></td>
      </tr>
      <tr>
        <td>パスワード(6文字以上)</td>
        <td>
            <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
        <td></td>
      </tr>
      <tr>
        <td>パスワード(確認用)</td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        <td></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "新規登録", class: 'btn btn-success' %></td>
        <td></td>
      </tr>
    </tdoby>
  </table>
<% end %>

</div>
<span style="background:#DDDDDD">既に登録済みの方</span></br>
<%= link_to "こちら", customer_session_path %> からログインしてください
</div>