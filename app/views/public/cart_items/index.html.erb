<div class="container">
  <span style="background:#DDDDDD">会員一覧</span>
  <%= link_to "カートを空にする", cart_items_path, method: :delete, "data-confirm" => "カートを空にしますか？", class: 'btn btn-danger' %></br>
  <div class="row">
    <table class="table table-hover table-inverse">
      <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </thead>
      <tbody>
        <% @cart_items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.add_tax_price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: item, url: cart_item_path do |f| %>
              <%= f.select :amount, [1,2,3] %>
              <%= f.submit "変更", class: 'btn btn-success' %>
            <% end %>
          </td>
          <td><%= (item.add_tax_price.to_s(:delimited))*amount %></td>
          <td><%= link_to "削除する", cart_items_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
   </div>
    <%= link_to "買い物を続ける", items_path, class: 'btn btn-primary' %>
    <table"table table-hover table-inverse">
      <thead>
        <th>合計金額</th>
        <th></th>
      </thead>
    </table></br>

    <%= link_to "情報入力に進む", new_order_path, class: 'btn btn-success' %>

</div>