<div class="container">
  <span style="background:#DDDDDD">ショッピングカート</span>
  <div style="text-align:right;">
    <%= link_to "カートを空にする", delete_all_path, method: :delete, "data-confirm" => "カートを空にしますか？", class: 'btn btn-danger' %></br>
  </div>
  <div class="row">
    <div class="col-12">
    <table class="table table-hover table-inverse">
      <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td>
            <%= form_with model: cart_item, url: cart_items_path do |f| %>
              <%= f.select :amount, [1,2,3,4,5] %>
              <%= f.submit "変更", class: 'btn btn-success' %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal %></td>
          <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>

    <% @cart_items.each do |cart_item| %>
      <% @total += cart_item.subtotal %>
    <% end %>
    <div class="col-9", style="text-align:left;">
    <%= link_to "買い物を続ける", items_path, class: 'btn btn-primary' %>
    </div>
    <div class="col-3", style="text-align:right;">
    <table class="table table-hover table-inverse">
      <tr>
        <th>合計金額</th>
        <td><%= @total %></td>
      </tr>
    </table>
    </div>
    </div>
    <div style="text-align:center;">
      <%= link_to "情報入力に進む", new_order_path, class: 'btn btn-success' %>
    </div>

</div>